<div class="container">    
    <div class="change-wall">

    <div class="form-register" ng-controller="ChangePassController">
		  <h1 class="text-center login-title"> Promjena passworda </h1>

    	<div class="input-prepend">
		<span class="add-on"><i class="icon-envelope"></i></span>
  		<input name="email" type="text" class="formr-control" placeholder="E-mail" ng-model="user.email" />
  		</div>

  		<div class="input-prepend">
		<span class="add-on"><i class="icon-lock"></i></span>
	  	<input name="passwordEx" type="password" class="formr-control" placeholder="Existing password" ng-model="user.password" />
		</div>

  		<div class="input-prepend">
		<span class="add-on"><i class="icon-lock"></i></span>
	  	<input name="password" type="password" class="formr-control" placeholder="New password" ng-model="user.new_password" />
		</div>

		<div class="input-prepend">
		<span class="add-on"><i class="icon-lock"></i></span>
	  	<input name="passwordc" type="password" class="formr-control" placeholder= "Confirm new password" ng-model="user.new_password_confirmation" />
		</div>

		<div class="actions">
			  <button class="btn btn-lg btn-primary btn-block" ng-click="changePass()"  ng-disabled="form-register.$invalid">Potvrdi</button>
		</div>

		</div>
    </div>
</div>