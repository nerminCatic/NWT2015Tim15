<table class="table table-hover table-condensed tabela" ng-controller="SearchUsersControler">
    <thead>
        <tr>
            <th>{{ 'NAME' | translate }}</th>
            <th>{{ 'SURNAME' | translate }}</th>
            <th>{{ 'EMAIL' | translate }}</th>
            <th>{{ 'JOB' | translate }}</th>
            <th></th>
            <th>{{ 'STATUS' | translate }}</th>
            <th>{{ 'ACTION' | translate }}</th>
        </tr>
    </thead>
    <tbody>
      <tr ng-repeat="user in users | filter:query | orderBy:orderProp">
        <td> {{user.name}}</td>
        <td> {{user.surname}}</td>
        <td> {{user.email}}</td>
        <td> {{user.job}}</td>
        <td> {{user.role.name}}</td>
        <td> {{user.confirmed}}</td>
        <td>
          <div class="actions" >
            <button class="btn btn-primary btn-usr-mng" ng-click="openUpdateUser(user.id, $index)"  ng-disabled="myForm.$invalid">{{ 'CHANGE' | translate }}</button>
          </div>
          <div class="actions" >
            <button class="btn btn-primary btn-usr-mng" ng-click="deleteUser(user.id, $index)"  ng-disabled="myForm.$invalid">{{ 'DELETE' | translate }}</button>
          </div>
          <div class="actions" >
            <button class="btn btn-primary btn-usr-mng" ng-click="banUser(user.id, $index)"  ng-disabled="myForm.$invalid">{{ 'BAN' | translate }}</button>
          </div>
          <div class="actions" >
            <button class="btn btn-primary btn-usr-mng" ng-click="unbanUser(user.id, $index)"  ng-disabled="myForm.$invalid">{{ 'UNBAN' | translate }}</button>
          </div>
        </td>
      </tr>
</table>
