<div class="pretraga">
  {{ 'SORT' | translate }}
  <select ng-model="orderProp" class="form-control">
    <option value="name">{{ 'ORDNAME' | translate }}</option>
    <option value="surname">{{ 'ORDSURNAME' | translate }}</option>
  </select>
  {{ 'SEARCH' | translate }} <input ng-model="query" class="form-control">
  </br>
  {{ 'ADDNEWUSER' | translate }} 
  <button class="btn btn-primary" ng-controller="RegistrationUserByManagerController" ng-click="registerUserWithRole()"  ng-disabled="myForm.$invalid">{{ 'ADDUSER' | translate }}</button>
</div>

