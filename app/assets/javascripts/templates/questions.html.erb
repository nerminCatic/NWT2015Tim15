<div classs="container"  ng-controller="QuestionsController">
    </br></br>
    <div class="pretraga">
      Pretraga: <input ng-model="query" class="form-control">
    </div>

    </br>  
    <div style="text-align:center;">Trebate savjet? Postavite svoje pitanje <a href ng-click="newQuestion()">OVDJE</a>. </div>
    </br><br>
    <div class="row">
        <div class="col-lg-2 col-md-2"></div>
        <div class="col-lg-8 col-md-8">
            <div class="list-group">
              <a href="#" class="list-group-item" ng-repeat="question in questions | filter:query">
               <div class="row">
                   <div class="col-lg-10 col-md-10">
                        <h4 class="list-group-item-heading"> {{question.name}}?</h4>
                        <p class="list-group-item-text"><span class="glyphicon glyphicon-pencil"></span> {{ question.user.name }} &nbsp&nbsp<span class="glyphicon glyphicon-time"></span> {{ question.created_at }}
                        <br>
                        Kategorija: {{ question.category.name }} </p>
                    </div>
                    <div class="col-lg-2 col-md-2">Komentara: {{question.number_of_comments}}</div>
                </div>
              </a>
            </div>
        </div>
        <div class="col-lg-2 col-md-2"></div>
    </div>
