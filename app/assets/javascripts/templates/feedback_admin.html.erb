<div class="pretraga">
	{{ 'SORT' | translate }}
	<select ng-model="orderProp" class="form-control">
	  <option value="name"> {{ 'NAME' | translate }}</option>
	  <option value="description">{{ 'MSG' | translate }}</option>
	  <option value="email">{{ 'EMAIL' | translate }}</option>
	  <option value="form">{{ 'TYPEF' | translate }}</option>
	</select>
	{{ 'SEARCH' | translate }} <input ng-model="query" class="form-control">
