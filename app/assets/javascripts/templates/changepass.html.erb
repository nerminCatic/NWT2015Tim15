<!--Form for password change for user that is logged in-->
<div class="container"> 
	<div class="bcg" style="height:600px">   
	    <div class="change-wall">

	    <form class="form-register" name="myForm" ng-controller="ChangePassController">
	    	<!--title-->
			<h1 class="text-center login-title"> Promjena passworda </h1>

			<!-- input current password-->
			<div class="input-prepend">
		      	<span class="add-on"><i class="icon-lock"></i></span>
				<input name="passwordEx" type="password" class="formr-control" placeholder="Trenutna šifra" ng-model="user.password"  required/><br>
				<!--password validation (client side)-->
				<span style="color:red" ng-show="myForm.password.$dirty && myForm.password.$invalid">
					<span ng-show="myForm.password.$error.required">Unos pasvorda je obavezan.</span>
				</span>	
			</div>

			<!-- input new password-->
			<div class="input-prepend">
		      	<span class="add-on"><i class="icon-lock"></i></span>
				<input name="password" type="password" minlength="3" class="formr-control" placeholder="Nova šifra" ng-model="user.new_password" required/><br>
				<!--password validation (client side)-->
				<span style="color:red" ng-show="myForm.password.$dirty && myForm.password.$invalid">
					<span ng-show="myForm.password.$error.required">Unos pasvorda je obavezan.</span>Pasvord mora imati više od tri karaktera.
				</span>	
			</div>

			<!-- input new password confirmation-->
			<div class="input-prepend">
		      	<span class="add-on"><i class="icon-lock"></i></span>
				<input name="passwordc" type="password" minlength="3" class="formr-control" placeholder= "Potvrda šifre" ng-model="user.new_password_confirmation" required/><br>
				<!--password validation (client side)-->
				<span style="color:red" ng-show="myForm.password.$dirty && myForm.password.$invalid">
					<span ng-show="myForm.password.$error.required">Unos pasvorda je obavezan.</span>Pasvord mora imati više od tri karaktera.
				</span>	
			</div>

			<!--button submit-->
			<div class="actions">
				  <button class="btn btn-lg btn-primary btn-block" ng-click="changePass()"  ng-disabled="form-register.$invalid">Potvrdi</button>
			</div>

			</form>
	    </div>
	</div>
</div>