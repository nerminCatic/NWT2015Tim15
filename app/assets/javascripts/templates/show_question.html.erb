<div classs="container"  ng-controller="CommentsController">
    </br></br>
    <div class="pretraga">
      Pretraga: <input ng-model="query" class="form-control">
    </div>
    </br><br>
    <div class="row">
        <div class="col-lg-2 col-md-2"></div>
        <div class="col-lg-8 col-md-8">
            <div class="list-group">
            <div class="list-group-item active">
                  <div class="row">
                    <div class="col-lg-8 col-md-8">Tema</div>
                    <div class="col-lg-2 col-md-2" style="text-align:center;">Kategorija</div>
                    <div class="col-lg-2 col-md-2" style="text-align:center;">Odgovori</div>
                  </div>
              </div>
              <div class="list-group-item" style="background-color:#F2F2F0;">
                  <div class="row">
                    <div class="col-lg-8 col-md-8">
                      <h4 class="list-group-item-heading blue-text"> {{question.name}}?</h4>
                      <p class="list-group-item-text blue-text" style="font-size:11px; margin-top:10px;">
                        <span class="glyphicon glyphicon-pencil"></span> 
                        {{ question.user.name}} {{ question.user.surname}} &nbsp&nbsp&nbsp
                        <span class="glyphicon glyphicon-time"></span> {{ question.time_created }}
                      </p>
                      <div style="margin-top:15px">
                      Opis: {{question.description}}
                      </div>
                      <br>
                    </div>
                    <div class="col-lg-2 col-md-2" style="text-align:center;"> {{ question.category.name }} </div>
                    <div class="col-lg-2 col-md-2" style="text-align:center;"> {{question.number_of_comments}}</div>
                    <a class="btn btn-default" ng-href="/#/questions/{{question.id}}/resources">Resources</a>
                  </div>
              </div>
              <div href="#" class="list-group-item" ng-repeat="comment in comments | filter:query">
               <div class="row">
                   <div class="col-lg-12 col-md-12">
                      <p class="list-group-item-text blue-text" style="font-size:11px;">
                      <span class="glyphicon glyphicon-pencil"></span> 
                        {{ comment.user.name}} {{ comment.user.surname}} &nbsp&nbsp&nbsp
                        <span class="glyphicon glyphicon-time"></span> {{ comment.time_created }}
                        </p>
                      <div style="color:black;margin-top:10px;"> {{comment.content}} </div>
                    </div>
                </div>
              </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-2"></div>
    </div>
