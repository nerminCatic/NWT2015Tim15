	<div class="bcgnone" style="height:600px">
	    <div class="edit-user-by-mng-wall">                      <!-- TBD dodati ovaj kontroler!-->
			<form class="form-register form-inline" role="form" name="myForm" ng-controller="EditUserByManagerController">  

			  	<!-- input name-->
			  	<div class="input-prepend form-group has success has-feedback">
			  		<label class="control-label" for="inputSuccess4"></label>
				  	<input name="name" pattern="^([A-z]){3,}$" maxlength="20" class="form-control" type="text" placeholder="Ime" ng-model="user.name" required autofocus id="inputSuccess4"/>
				  	<span class="glyphicon glyphicon-user form-control-feedback"></span></br></br>
				  	<!--name validation (client side)-->
					<span style="color:red" ng-show="myForm.name.$dirty && myForm.name.$invalid">
						<span ng-show="myForm.name.$error.required">Unos imena je obavezan.</span>Ime mora sadržavati više od 3 karaktera.
					</span>	
			    </div>

			    <!-- input surname-->
			  	<div class="input-prepend form-group has success has-feedback">
			  		<label class="control-label" for="inputSuccess4"></label>
				  	<input name="surname" pattern="^([A-z]){3,}$" maxlength="25" type="text" class="form-control" placeholder="Prezime" ng-model="user.surname" required id="inputSuccess4"/>
				  	<span class="glyphicon glyphicon-user form-control-feedback"></span></br></br>
				  	<!--surname validation (client side)-->
					<span style="color:red" ng-show="myForm.surname.$dirty && myForm.surname.$invalid">
				    	<span ng-show="myForm.surname.$error.required">Unos prezimena je obavezan.</span>Prezime mora sadržavati više od 3 karaktera.
				    </span>		
			    </div>

			    <!-- input job-->
			  	<div class="input-prepend form-group has success has-feedback">
			  		<label class="control-label" for="inputSuccess4"></label>
				  	<input name="job" type="text" pattern="^([A-z]){2,}$" maxlength="35" class="form-control" placeholder= "Posao" ng-model="user.job" id="inputSuccess4"/>
				  	<span class="glyphicon glyphicon-briefcase form-control-feedback"></span></br></br>
				  	<!--job validation (client side)-->
				  	<span style="color:red" ng-show="myForm.job.$dirty && myForm.job.$invalid">Posao mora sadržavati više od 2 karaktera.
				    </span>		
			    </div>

				<!-- input job-->
				<div class="input-prepend form-group has success has-feedback">
					<label class="control-label" for="inputSuccess4"></label>
				  	<input name="job" type="text" pattern="^([A-z]){2,}$" maxlength="35" class="form-control" placeholder= "Posao" ng-model="user.job" id="inputSuccess4" />
				  	<span class="glyphicon glyphicon-map-marker form-control-feedback"></span></br></br>
				  	<!--job validation (client side)-->
				  	<span style="color:red" ng-show="myForm.job.$dirty && myForm.job.$invalid">Posao mora sadržavati više od 2 karaktera.
				    </span>	
				</div>

				<!-- input adress -->
				<div class="input-prepend form-group has success has-feedback">
					<label class="control-label" for="inputSuccess4"></label>
				  	<input name="adress" type="text" class="form-control" placeholder="Adresa" ng-model="user.adress"  id="inputSuccess4"/>
				  	<span class="glyphicon glyphicon-map-marker form-control-feedback"></span></br></br>
				</div>

				<!-- input phone-->
				<div class="input-prepend form-group has success has-feedback">
					<label class="control-label" for="inputSuccess4"></label>
				  	<input name="phone" type="text" class="form-control" placeholder="Telefon" ng-model="user.phone"  id="inputSuccess4"/>
				  	<span class="glyphicon glyphicon-home form-control-feedback"></span></br></br>
				</div>

				<!-- input email-->
				<div class="input-prepend form-group has success has-feedback">
					<label class="control-label" for="inputSuccess4"></label>
				  	<input name="email" type="email" class="form-control" placeholder="E-mail" ng-model="user.email" required  id="inputSuccess4"/>
				  	<span class="glyphicon glyphicon-envelope form-control-feedback"></span></br></br>
				  	<!--email validation (client side)-->
				  	<span style="color:red" ng-show="myForm.email.$dirty && myForm.email.$invalid">
						<span ng-show="myForm.email.$error.required">Unos emaila je obavezan.</span>
						<span ng-show="myForm.email.$error.email">Format email addrese nije dobar.</span>
					</span>	
				</div>

				<!-- input role -->
				<div class="input-prepend form-group has success has-feedback">
					<label class="control-label" for="inputSuccess4"></label>
                    <select class="form-control" ng-model="role" ng-options="role.name for role in roles track by role.id" required id="inputSuccess4"></br></br>
                    </select>
                </div>
</br></br>
